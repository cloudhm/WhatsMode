<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIcon="@drawable/btn_return"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStartWithNavigation="0dp" >

        <TextView
            android:id="@+id/title"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:text="@string/new_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/done"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:text="@string/done"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/first_name"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/first_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/last_name"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/last_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/address"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/address1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/apt_suite_etc"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/address2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_bbbbbb"
                    android:hint="@string/optional"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/city"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/city"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <LinearLayout
                android:id="@+id/country_l"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/country"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/country"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_bbbbbb"
                    android:hint="@string/please_select"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/button_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <LinearLayout
                android:id="@+id/province_l"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/province"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/province"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_bbbbbb"
                    android:hint="@string/please_select"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/button_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="2px"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/zip"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/zip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/phone"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_bbbbbb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="end"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>