<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:id="@+id/add_address"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/icon_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="@string/add_address"
                        android:textColor="@color/gray_bbb" />
                </LinearLayout>
                
                <RelativeLayout
                    android:id="@+id/sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:background="@color/white"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/sign_in_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_login" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zhong Chao"
                        android:textColor="@color/gray_333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_marginTop="4dp"
                        android:text="12818485107"
                        android:textColor="@color/gray_bbb"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phone"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="4114 Sepulveda Blvd,Culver City,Culver City "
                        android:textColor="@color/gray_bbb"
                        android:textSize="14sp" />
                    
                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_edit" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/detail_address"
                        android:layout_marginTop="15dp"
                        android:background="@color/separator" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:id="@+id/text_ship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shipping method"
                            android:textColor="@color/gray_bbb"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/shiping_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Standard Shipping  >"
                            android:textColor="@color/gray_333333"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <EditText
                    android:id="@+id/gift_card_edit"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:singleLine="true"
                    android:text="ABCDEFGHI"
                    android:paddingLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/gift_amount"
                    android:text="-$0.21"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/btn_sure"
                    android:paddingLeft="15dp"
                    android:paddingRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="USD"
                    android:textSize="10dp"
                    android:textColor="@color/btn_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/check_card"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="APPLY"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:background="@color/gray_333333"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:layout_height="48dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/subtotal"
                        android:textColor="@color/gray_bbb"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/subtotal"
                        android:textSize="14sp"
                        android:textColor="@color/gray_333333"
                        android:layout_gravity="center_vertical"
                        android:text="$14.97"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="USD"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:textSize="10dp"
                        android:textColor="@color/gray_d5d5d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/separator"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="2dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:layout_height="48dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/shipping_cost"
                        android:textColor="@color/gray_bbb"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/shipping_cost"
                        android:textSize="14sp"
                        android:textColor="@color/gray_333333"
                        android:layout_gravity="center_vertical"
                        android:text="+$10.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="USD"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:textSize="10dp"
                        android:textColor="@color/gray_d5d5d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/separator"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="2dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:layout_height="48dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/taxes"
                        android:textColor="@color/gray_bbb"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/taxes"
                        android:textSize="14sp"
                        android:textColor="@color/gray_333333"
                        android:layout_gravity="center_vertical"
                        android:text="+$0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="USD"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:textSize="10dp"
                        android:textColor="@color/gray_d5d5d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/pay"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/gray_333333"
            android:gravity="center"
            android:text="@string/pay"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/total_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@+id/pay"
            android:gravity="center_vertical"
            android:text="$14.97"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/total_count"
            android:gravity="center_vertical"
            android:text="@string/total_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@+id/pay"
            android:text="USD"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>