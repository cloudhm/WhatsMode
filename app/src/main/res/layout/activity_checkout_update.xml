<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="select address"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/select_method"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="select pay method" />
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:background="@color/separator"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/product_total"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:paddingRight="13dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="Subtotal: 商品總計"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/transport_crash"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:paddingRight="13dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="Shipping: 郵費"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:paddingRight="13dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="Total:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/separator"
                android:layout_height="0.5dp" />
            <TextView
                android:layout_width="match_parent"
                android:padding="13dp"
                android:text="@string/custom_know"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="23dp"
            android:text="total:USD 251" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:padding="18dp"
            android:text="PAY" />
    </LinearLayout>
</LinearLayout>