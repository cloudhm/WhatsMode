<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/iv_radio"
        android:padding="13dp"
        android:background="@drawable/radio_select"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp" />
    <TextView
        android:id="@+id/name"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_radio"
        android:layout_marginLeft="13dp"
        android:layout_margin="13dp"
        android:text="wafawfwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/black_boarder"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_descrease"
            android:layout_width="45dp"
            android:padding="8dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ä¸€"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:id="@+id/quality"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:id="@+id/tv_increase"
            android:padding="5dp"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>