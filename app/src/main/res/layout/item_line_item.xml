<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/image_view_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_view"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="120dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_toRightOf="@id/image_view_l"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/sku"
        android:visibility="gone"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="6dp"
        android:textSize="@dimen/sp_14"
        android:singleLine="true"
        android:textColor="@color/gray_bbbbbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/model"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/sp_16"
        android:singleLine="true"
        android:textColor="@color/gray_bbbbbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--<TextView
        android:id="@+id/model"
        android:layout_alignBottom="@+id/image_view_l"
        android:layout_alignLeft="@+id/title"
        android:textColor="@color/gray_bbbbbb"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->

    <TextView
        android:id="@+id/original_price"
        android:layout_alignBottom="@+id/image_view_l"
        android:layout_alignLeft="@+id/title"
        android:textColor="@color/gray_bbbbbb"
        android:textSize="@dimen/sp_12"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/quantity"
        android:textColor="@color/gray_bbbbbb"
        android:textSize="@dimen/sp_16"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/image_view_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/price"
        android:layout_above="@+id/original_price"
        android:layout_alignLeft="@+id/original_price"
        android:layout_marginBottom="1dp"
        android:textSize="@dimen/sp_16"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/usd"
        android:layout_alignBottom="@+id/price"
        android:layout_toRightOf="@+id/price"
        android:layout_marginLeft="2dp"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/gray_bbbbbb"
        android:text="@string/usd"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>